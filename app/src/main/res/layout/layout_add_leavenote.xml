<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/scrollview"
    android:layout_height="wrap_content"
    android:background="@mipmap/list_background"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/txtper"
        android:text="Leave Application"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"



    android:layout_below="@id/txtper"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"

  >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_leave_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Leave Duration"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id2"
        android:layout_gravity="center"
        android:gravity="center"

          >
    <EditText
        android:id="@+id/et_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"

        android:padding="10dp"
        android:background="#edeaea"
        android:hint="From Date"
        android:focusable="false"
        android:inputType="date" />
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id1"
        android:layout_gravity="center"
        android:gravity="center"

        >
    <EditText
        android:id="@+id/et_to_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:background="#edeaea"

        android:padding="10dp"
        android:focusable="false"
        android:hint="To Date"
        android:inputType="date" />
</android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Leave Reason Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <!--<Spinner
        android:id="@+id/spn_leave_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />-->

    <!--<TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id3"
        android:layout_gravity="center"
        android:gravity="center"

        >
    <EditText
        android:id="@+id/et_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:background="#edeaea"
        android:padding="10dp"

        android:hint="Note"
        android:inputType="textMultiLine" />
</android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btn_submit_leavenote"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:text="Submit" />
</LinearLayout>
</android.support.v7.widget.CardView>
    </RelativeLayout>
    </ScrollView>