<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/list_background"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/txtper"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Personal Details" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtper"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id1"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:background="#edeaea"
                android:gravity="center"
                android:hint="Name"
                android:padding="10dp" />
</android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id2"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <TextView
                android:id="@+id/admDt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:background="#edeaea"
                android:hint="Admission Date"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id3"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <TextView
                android:id="@+id/admNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:background="#edeaea"
                android:gravity="center"
                android:hint="AdmNo"
                android:padding="10dp" />
</android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id4"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class"
                android:id="@+id/classno"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:background="#edeaea"/>
            </android.support.design.widget.TextInputLayout>
            <!--  <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="ClassID"
                  android:padding="10dp"
                  android:gravity="center"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_marginBottom="7dp"
                  android:background="#edeaea"/>-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id5"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact1"
                android:editable="false"
                android:id="@+id/contact1"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"

                android:background="#edeaea"/>
</android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id6"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact2"
                android:padding="10dp"
                android:gravity="center"
                android:editable="false"
                android:id="@+id/contact2"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:background="#edeaea"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id7"
                android:layout_gravity="center"
                android:gravity="center"

                >
            <TextView
                android:id="@+id/txtclassteacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mr. Anil"
                android:textSize="16sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:background="#edeaea"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

